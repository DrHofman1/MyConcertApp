<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp">

    <TextView
        android:id="@+id/tvConcertItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Koncert Neve"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvConcertItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dátum: 2025.05.01"
        app:layout_constraintTop_toBottomOf="@id/tvConcertItemName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvConcertItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ár: 5000 Ft"
        app:layout_constraintTop_toBottomOf="@id/tvConcertItemDate"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

